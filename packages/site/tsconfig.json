{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": [".eslintrc.js", "src", "pages", "globals.ts", "types/*.ts"],
  "exclude": ["node_modules"]
}
